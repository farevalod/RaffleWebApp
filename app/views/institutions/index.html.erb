<p id="notice"><%= notice %></p>

<h1>Institutions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tickets per book</th>
      <th>Books per seller</th>
      <th>Draw date</th>
      <th>Ticket price</th>
      <th>Max books per seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.tickets_per_book %></td>
        <td><%= institution.books_per_seller %></td>
        <td><%= institution.draw_date %></td>
        <td><%= institution.ticket_price %></td>
        <td><%= institution.max_books_per_seller %></td>
        <td><%= link_to 'Show', institution %></td>
        <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
        <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

