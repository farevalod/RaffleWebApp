<div class="form">

  <%= form_tag(enter_sale_path) do %>
    <% params[:tickets_ids].each do |id| %>
      <%= hidden_field_tag 'tickets_ids[]' , id %>
    <%end%>
    <%= hidden_field_tag :book_id , params[:book_id]%>
    <table>
      <thead>
      <tr>
        <th colspan="3">Ingresa los Datos para los Boletos Seleccionados:</th>
      </tr>
      </thead>

      <tbody>

      <tr>
        <td><%= label_tag :name, 'Nombre:' %></td>
        <td><%= text_field_tag :name, params[:name] %></td>
      </tr>
      <tr>
        <td><%= label_tag :email, 'Email:' %></td>
        <td><%= email_field_tag :email, params[:email] %></td>
      </tr>
      <tr>
        <td><%= label_tag :phone_number, 'Teléfono:' %></td>
        <td><%= number_field_tag :phone_number, params[:phone_number] %></td>
      </tr>


      <tr>
        <td></td>
        <td><%= submit_tag 'Vender', data: { confirm: 'Están correctos los datos? Después no se pueden modificar!!' } %></td>
      </tr>

      </tbody>
    </table>


  <% end %>
</div>